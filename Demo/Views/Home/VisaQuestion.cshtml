@model SpecialColumnCenterModel
@{
    ViewBag.Title = "签证常见问题列表";
}
@section Css{
    <link href="@Url.Content("~/Content/Region.css")" rel="stylesheet" type="text/css" />
}
@section Js{
    <script type="text/javascript">
        jQuery(".ranking").slide({ titCell: ".hd li", mainCell: ".bd", delayTime: 0 });
    </script>
}
<div  id="wp" class="wp j_wp">
     <div id="pt" class="bm cl">
        <div class="z">
            <a class="nvhm" title="网站首页" href="/">@ConfigBLL.CurrentSysConfigInfo.Sys_Value.WebName</a>
            <em>›</em>
            <a href="@URLUtility.VisaQuestionUrl()">签证常见问题</a>
        </div>
    </div>
     <div id="ct" class="ct2 wp cl">
        <div class="mn animated fadeInUp">
            <div class="bm">
                <div class="portal-hd cl">
                    <h2>签证问题列表</h2>
                </div>
                <ul class="cl animated fadeInUp">
                    @foreach (var item in Model.SearchModel.DataList)
                    { 
                        <li class="photo-big" style="padding-bottom:10px;">
                            <h3><a class="link" href="@URLUtility.VisaQuestionDetailUrl(item.AutoKey,item.SEOURL)">@item.SC_Name</a></h3>
                            <p>@item.Description.DisplayByMaxLength(80)</p>

                        </li>
                    }
                </ul>
            </div>
            <!--分页-->
            <div class="pagin">
                @Model.SearchModel.Pagination.AdminPagingHtml()
            </div>
        </div>
        <div class="sd pph">
            @Html.Partial("_AdsContent", AdsPos.AdsMainContact)

            <div class="mt20">
                <div class="portal-hd">
                    <div id="new-visa-t" class="area">
                        <h2>热门签证</h2>
                        <a class="more" href="@URLUtility.VisaCenterUrl()">查看所有</a>
                    </div>
                </div>
                <div class="bd">
                    <script type="text/javascript">
                        var sogou_ad_id = 396823;
                        var sogou_ad_height = 60;
                        var sogou_ad_width = 234;
                            </script>
                            <script type='text/javascript' src='http://images.sohu.com/cs/jsfile/js/c.js'></script>
                    <ul class="top10">
                        @foreach (var item in Model.RelatedVisa)
                        { 
                            <li>
                                <span class="price">￥@item.Price.ToPrice()</span>
                                <a href="@URLUtility.VisaDetailUrl(item.AutoKey)" title="@item.VName" >@item.VName</a>
                            </li>
                        }
                    </ul>
                    <div style="clear: both;"></div>
                </div>
            </div>
        </div>
    </div>
</div>